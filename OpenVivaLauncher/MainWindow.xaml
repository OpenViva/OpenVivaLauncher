<Window
	x:Class="OpenVivaLauncher.MainWindow"
	x:Name="MainWindow1"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Width="720"
	Height="480"
	mc:Ignorable="d"
	AllowsTransparency="True"
	Background="Transparent"
	Icon="Assets/Images/launcherBoxLogo.png"
	Loaded="Window_OnLoaded"
	MouseDown="Window_OnMouseDown"
	Title="Viva Launcher"
	WindowStartupLocation="CenterScreen"
	WindowStyle="None">
	<Grid>
		<Grid.Background>
			<ImageBrush ImageSource="Assets/Images/launcher.png"/>
		</Grid.Background>
		<Button x:Name="LaunchButton" Content="Play" HorizontalAlignment="Left" Margin="529,327,0,0" VerticalAlignment="Top" Width="150" Height="40" Foreground="White" Click="LaunchButton_OnClick"/>
		<ComboBox x:Name="VersionDropDown" HorizontalAlignment="Left" Margin="529,367,0,0" VerticalAlignment="Top" Width="150" Background="#FF444E7F" BorderBrush="#FFF7CB71" Loaded="VersionDropDown_OnLoaded" SelectionChanged="VersionDropDown_SelectionChanged"/>
		<Button x:Name="Close" Content="Close" HorizontalAlignment="Left" Margin="613,105,0,0" VerticalAlignment="Top" Click="Close_OnClick"/>
		<ProgressBar x:Name="ProgressBar" HorizontalAlignment="Left" Height="10" Margin="529,317,0,0" VerticalAlignment="Top" Width="150"/>
	</Grid>

</Window>